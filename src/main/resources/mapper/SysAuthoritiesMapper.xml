<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.rqg.springboot_security.mapper.SysAuthoritiesMapper">
    <select id="getUserAuthorities" resultType="SysAuthority" parameterType="String">
        select * from user_authorities where username=#{username}
    </select>
</mapper>